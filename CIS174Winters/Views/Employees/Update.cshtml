@model CIS174Winters.Models.Employee
@model CIS174Winters.Models.Employee
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<script src="~/Scripts/Employee.js" type="text/javascript"></script>

<h2>Update </h2>

<div class="row">
    <div class="col-md-3">
        <label>Search Name</label>
    </div>
    <div class="col-md-7">
        <input id="searchString" type="text" class="form-control" />
    </div>
    <div class="col-md-2">
        <button class="btn btn-dark" onclick="searchEmployee()">Search</button>
    </div>
</div>

<hr />

<div id="successMessage" class="hidden alert alert-success">
    Successfully Updated!
</div>
<div id="errorMessage" class="hidden alert alert-danger">
    Error Occurred!
</div>

<input id="employeeId" type="hidden" />
<div class="col-md-12">
    <div class="col-md-6">
        <label>Employee First Name:</label>
    </div>
    <div class="col-md-6">
        <input id="EmployeeFirstName" type="text" class="form-control" />
    </div>
</div>
<div class="col-md-12">
    <div class="col-md-6">
        <label>Last Name:</label>
    </div>
    <div class="col-md-6">
        <input id="EmployeeLastName" type="text" class="form-control" />
    </div>
</div>
<div class="col-md-12">
    <div class="col-md-6">
        <label>Middle Name:</label>
    </div>
    <div class="col-md-6">
        <input id="middleName" type="text" class="form-control" />
    </div>
</div>
<div class="col-md-12">
    <div class="col-md-6">
        <label>Birth Date:</label>
    </div>
    <div class="col-md-6">
        <input id="birthDate" type="text" class="form-control" />
    </div>
</div>
<div class="col-md-12">
    <div class="col-md-6">
        <label>Hire Date:</label>
    </div>
    <div class="col-md-6">
        <input id="HireDate" type="text" class="form-control" />
    </div>
</div>
div class="col-md-12">
<div class="col-md-6">
    <label>Department:</label>
</div>
<div class="col-md-6">
    <input id="Department" type="text" class="form-control" />
</div>
</div>
<div class="col-md-12">
    <div class="col-md-6">
        <label>Job Title:</label>
    </div>
    <div class="col-md-6">
        <input id="JobTitle" type="text" class="form-control" />
    </div>
</div>
<div class="col-md-12">
    <div class="col-md-6">
        <label>Salary:</label>
    </div>
    <div class="col-md-6">
        <input id="salary" type="text" class="form-control" />
    </div>
</div>
<div class="col-md-12">
<div class="col-md-6">
    <label>Available Hours:</label>
</div>
<div class="col-md-6">
    <input id="AvailableHours" type="text" class="form-control" />
</div>
</div>
<div class="col-md-12">
    <button class="btn btn-secondary margin-top-md margin-left-md" onclick="updateEmployee()">Save</button>
</div>

